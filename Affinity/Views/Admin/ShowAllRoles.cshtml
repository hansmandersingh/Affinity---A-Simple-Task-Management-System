@model List<string>
@{
    ViewBag.Title = "ShowAllRoles";
}

<h2>Show All Roles in this System.</h2>


@if (Model.Count != 0)
{
    <ul>
        @foreach (var role in Model)
        {
            <li style="list-style:none">
                @role
            </li>
        }
    </ul>
}
else
{
    <h3>No Roles found in the System.</h3>
}