@model List<string>
@{
    ViewBag.Title = "ShowAllRoles";
}

<h2>Show All Roles in this System.</h2>

<div class="jumbotron">
    <h1>All Roles</h1>
</div>



@if (Model.Count != 0)
{
    <div class="row">
        @foreach (var role in Model)
        {
            <div class="col-md-4">
                <p style="font-size:medium">@role</p>
            </div>
        }
    </div>
}
else
{
    <h3>No Roles found in the System.</h3>
}

