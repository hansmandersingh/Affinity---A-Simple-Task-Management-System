
@{
    ViewBag.Title = "UpdateTaskPercentage";
}

<div class="jumbotron">
    <h1>Update Task Percentage</h1>
</div>

@using (Html.BeginForm())
{
    @Html.Hidden("id", (int)ViewBag.id)
    <h4>Enter a percentage for the task completion:</h4>
    @Html.TextBox("percentageVal")
    <input type="submit" value="Update Percentage" name="save"/>
}