@model List<Affinity.Models.Task>
@{
    ViewBag.Title = "ViewAllTasks";
}

<h2>View All your Tasks</h2>

@if(Model.Count != 0)
{
    <ul>
        @foreach(var task in Model)
        {
            <li>
                @task.Name -- @task.CompletedPercentage % -- @task.Time -- @Html.ActionLink("Update Task Percentage", "UpdateTaskPercentage", "Developer", task.Id, null)
            </li>
        }
    </ul>
}
